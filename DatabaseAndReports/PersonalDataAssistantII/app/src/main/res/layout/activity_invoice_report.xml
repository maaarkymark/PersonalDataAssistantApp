<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:padding="20dp"

    tools:context=".InvoiceReportActivity">

    <TableRow
        android:id="@+id/tr_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_span="4"
            android:text="Invoice Report"
            android:textStyle="bold"
            android:textSize="20dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_heading"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/heading_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Project: " />

        <TextView
            android:id="@+id/heading_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Project Desc" />

        <TextView
            android:id="@+id/heading_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Invoice#: " />

        <TextView
            android:id="@+id/heading_tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="123456" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_heading1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/heading2_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="From: " />

        <TextView
            android:id="@+id/heading2_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="dd-mm-yyyy" />

        <TextView
            android:id="@+id/heading2_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="To: " />

        <TextView
            android:id="@+id/theading2_tv4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="dd-mm-yyyy" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_labour_heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_labour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_span="4"
            android:text="Labour Costs"
            android:textStyle="bold"
            android:textSize="16dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_labour_lv"
        android:layout_width="0dp"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lv_invoice_labour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </TableRow>

    <View android:id="@+id/separator1"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <TableRow
        android:id="@+id/tr_labour_total"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_labour_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:text="Labour Total: " />

        <TextView
            android:id="@+id/tv_labout_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00" />
    </TableRow>

    <View android:id="@+id/separator2"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <TableRow
        android:id="@+id/tr_expense_heading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_expense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_span="4"
            android:text="Expense Costs"
            android:textStyle="bold"
            android:textSize="16dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_expense_lv"
        android:layout_width="0dp"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lv_invoice_expenses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </TableRow>

    <View android:id="@+id/separator3"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <TableRow
        android:id="@+id/tr_expense_total"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_expense_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:text="Expense Total: " />

        <TextView
            android:id="@+id/tv_expense_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00" />
    </TableRow>

    <View android:id="@+id/separator4"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <TableRow
        android:id="@+id/tr_labour_expense_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">>

        <TextView
            android:id="@+id/tv_labour_expense_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:text="Labour and Expense Total: " />

        <TextView
            android:id="@+id/tv_labour_expense_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="$0.00" />
    </TableRow>

    <TableRow
        android:id="@+id/tr_taxes_total"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_taxes_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:text="Taxes Total: " />

        <TextView
            android:id="@+id/tv_taxes_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="$0.00" />
    </TableRow>

    <View android:id="@+id/separator5"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="1dp" />

    <TableRow
        android:id="@+id/tr_invoice_total"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_invoice_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:text="Invoice Total: " />

        <TextView
            android:id="@+id/tv_invoice_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="$0.00" />
    </TableRow>

    <View android:id="@+id/separator6"
        android:background="#000000"
        android:layout_width = "fill_parent"
        android:layout_height="3dp" />

</TableLayout>
