            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeScreen" />
        </activity>

        <!-- HELP ACTIVITY -->
        <activity
            android:name=".HelpActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:parentActivityName=".WelcomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WelcomeScreen" />
        </activity>

    </application>

</manifest>